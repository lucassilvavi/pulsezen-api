{
  "name": "pulsezen-api",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "license": "UNLICENSED",
  "scripts": {
    "start": "node bin/server.js",
    "build": "node ace build --ignore-ts-errors",
    "build:strict": "node ace build",
    "dev": "node ace serve --hmr",
    "dev:simple": "node simple-server.js",
    "test": "node ace test",
    "test:coverage": "c8 --reporter=html --reporter=text-summary --reporter=lcov node ace test",
    "test:unit": "node ace test --grep=\"Unit\"",
    "test:integration": "node ace test --grep=\"Integration\"",
    "test:unit:coverage": "c8 --reporter=html --reporter=text-summary node ace test --grep=\"Unit\"",
    "test:integration:coverage": "c8 --reporter=html --reporter=text-summary node ace test --grep=\"Integration\"",
    "lint": "eslint .",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "db:migrate": "node ace migration:run",
    "db:migrate:prod": "node build/bin/console.js migration:run --force",
    "db:rollback": "node ace migration:rollback",
    "db:seed": "node ace db:seed",
    "db:seed:prod": "node build/bin/console.js db:seed --force",
    "db:fresh": "node ace migration:fresh --seed",
    "setup": "npm run db:migrate && npm run db:seed"
  },
  "imports": {
    "#controllers/*": "./app/controllers/*.js",
    "#exceptions/*": "./app/exceptions/*.js",
    "#models/*": "./app/models/*.js",
    "#mails/*": "./app/mails/*.js",
    "#services/*": "./app/services/*.js",
    "#listeners/*": "./app/listeners/*.js",
    "#events/*": "./app/events/*.js",
    "#middleware/*": "./app/middleware/*.js",
    "#validators/*": "./app/validators/*.js",
    "#providers/*": "./providers/*.js",
    "#policies/*": "./app/policies/*.js",
    "#abilities/*": "./app/abilities/*.js",
    "#database/*": "./database/*.js",
    "#start/*": "./start/*.js",
    "#tests/*": "./tests/*.js",
    "#config/*": "./config/*.js",
    "#modules/*": "./app/modules/*.js",
    "#modules/auth/*": "./app/modules/auth/*.js",
    "#modules/sos/*": "./app/modules/sos/*.js",
    "#modules/journal/*": "./app/modules/journal/*.js",
    "#modules/breathing/*": "./app/modules/breathing/*.js",
    "#modules/music/*": "./app/modules/music/*.js"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.8.2",
    "@adonisjs/eslint-config": "^2.0.0",
    "@adonisjs/prettier-config": "^1.4.4",
    "@adonisjs/tsconfig": "^1.4.0",
    "@japa/api-client": "^3.1.0",
    "@japa/assert": "^4.0.1",
    "@japa/plugin-adonisjs": "^4.0.0",
    "@japa/runner": "^4.2.0",
    "@swc/core": "1.11.24",
    "@types/luxon": "^3.6.2",
    "@types/node": "^22.15.18",
    "c8": "^10.1.3",
    "eslint": "^9.26.0",
    "hot-hook": "^0.4.0",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.5.3",
    "ts-node-maintained": "^10.9.5",
    "typescript": "~5.8"
  },
  "dependencies": {
    "@adonisjs/auth": "^9.4.0",
    "@adonisjs/core": "^6.19.1",
    "@adonisjs/cors": "^2.2.1",
    "@adonisjs/lucid": "^21.6.1",
    "@adonisjs/mail": "^9.2.2",
    "@aws-sdk/client-ses": "^3.926.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/html-pdf-node": "^1.0.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/pg": "^8.15.4",
    "@types/uuid": "^10.0.0",
    "@vinejs/vine": "^3.0.1",
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^12.2.0",
    "edge.js": "^6.3.0",
    "html-pdf-node": "^1.0.8",
    "jsonwebtoken": "^9.0.2",
    "luxon": "^3.7.1",
    "mysql2": "^3.14.1",
    "pg": "^8.16.3",
    "puppeteer": "^24.22.3",
    "reflect-metadata": "^0.2.2",
    "uuid": "^11.1.0"
  },
  "hotHook": {
    "boundaries": [
      "./app/controllers/**/*.ts",
      "./app/middleware/*.ts"
    ]
  },
  "prettier": "@adonisjs/prettier-config"
}
