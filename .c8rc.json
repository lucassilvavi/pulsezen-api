{
  "include": [
    "app/**/*.ts",
    "app/**/*.js"
  ],
  "exclude": [
    "tests/**",
    "coverage/**",
    "node_modules/**",
    "**/*.d.ts",
    "bin/**",
    "build/**",
    "tmp/**"
  ],
  "reporter": [
    "text",
    "text-summary",
    "html",
    "lcov",
    "json"
  ],
  "all": true,
  "check-coverage": true,
  "lines": 80,
  "functions": 80,
  "branches": 70,
  "statements": 80,
  "reports-dir": "./coverage"
}
